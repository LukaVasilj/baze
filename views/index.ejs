    <a href="/create" class="create-button">Create New</a> <!-- Added Create New button -->

    <h2>Theaters from database : </h2>

    <table>
      <thead>
        <tr>
          <th>TheaterID</th>
          <th>Name</th>
          <th>Capacity</th>
          <th>Actions</th> <!-- Added a new column for actions -->
        </tr>
      </thead>
      <tbody>
        <% for (var i = 0; i < theaters.length; i++) { %>
          <tr>
            <td><%= theaters[i].TheaterID %></td>
            <td><%= theaters[i].Name %></td>
            <td><%= theaters[i].Capacity %></td>
            <td class="actions">
              <!-- Edit button -->
              <form action="/edit" method="GET" style="display: inline;">
                <input type="hidden" name="theaterID" value="<%= theaters[i]._id %>" />
                <button type="submit">Edit</button>
              </form>
              <!-- View button -->
              <form action="/view" method="GET" style="display: inline;">
                <input type="hidden" name="theaterID" value="<%= theaters[i]._id %>" />
                <button type="submit">View</button>
              </form>
              <!-- Delete button -->
              <button class="delete-button" data-theater-id="<%= theaters[i]._id %>">Delete</button>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <div id="message"></div>

    <script src="/main.js"></script>
  </body>
</html>